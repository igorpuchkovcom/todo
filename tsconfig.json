{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@interfaces/*": ["src/interfaces/*"]
    }
  },
  "include": ["src/**/*.ts", "config/*.ts", "serverless.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
